<!DOCTYPE html>
	<html lang="pt-br">
		<head>
			<meta charset="utf-8"/>
			<title>Notícias</title>
		</head>
	<body>
		<h1>Notícias</h1>

		<table>
			<tr>
				<td>ID</td>
				<td>Titulo</td>
				<td>Resumo</td>
				<td>Autor</td>
				<td>Notícia</td>
				<td>Data dos Fatos</td>
				<td>Data de Criação</td>
			</tr>
			
			<% for(var i = 0; i < noticias.rows.length; i++) {%>
				<tr>
					<td><%= noticias.rows[i].id_noticia %></td>
					<td><%= noticias.rows[i].titulo %></td>
					<td><%= noticias.rows[i].resumo %></td>
					<td><%= noticias.rows[i].autor %></td>
					<td><%= noticias.rows[i].noticia %></td>
					<td><%= noticias.rows[i].data_noticia %></td>
					<td><%= noticias.rows[i].data_criacao %></td>
				</tr>
			<% } %>
		</table>

	</body>
</html>